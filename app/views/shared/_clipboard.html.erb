<div data-controller="clipboard" class="relative inline-block">
  <button
    data-action="click->clipboard#copy"
    class="px-4 py-2 rounded bg-amber-500 text-white font-semibold shadow hover:bg-amber-600 cursor-pointer transition"
    type="button"
    data-clipboard-target="button"
  >
    Copy
  </button>
  <input
    type="text"
    value="This text will be copied!"
    class="ml-3 border rounded px-3 py-2 w-64"
    readonly
    data-clipboard-target="input"
  >
  <!-- Talk bubble (hidden by default) -->
  <div
    data-clipboard-target="bubble"
    class="absolute left-1/2 -translate-x-1/2 -top-12 bg-gray-900 text-white px-4 py-2 rounded-full shadow opacity-0 pointer-events-none transition-all duration-300 select-none"
    style="white-space: nowrap;"
  >
    Copied!
    <span class="absolute left-1/2 -bottom-2 w-3 h-3 bg-gray-900 rounded-full -translate-x-1/2"></span>
  </div>
</div>
